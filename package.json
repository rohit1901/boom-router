{
  "name": "monorepo",
  "description": "A simple router for React. Monorepo package.",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/boom-router-react"
  ],
  "version": "1.0.0",
  "scripts": {
    "fix:p": "prettier --write \"./**/*.(js|ts){x,}\"",
    "test": "vitest",
    "size": "size-limit",
    "build": "npm run build -ws",
    "watch": "concurrently -n boom-router \\\\\\\"npm run -w packages/boom-router-react watch\\\\\\\"",
    "lint": "eslint packages/**/*.js"
  },
  "author": "Rohit Khanduri <rohit.khanduri@proton.me>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rohit1901/boom-router.git"
  },
  "license": "MIT",
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "printWidth": 80
  },
  "size-limit": [
    {
      "path": "packages/boom-router/esm/index.js",
      "limit": "2500 B",
      "ignore": [
        "react",
        "use-sync-external-store"
      ]
    },
    {
      "path": "packages/boom-router/esm/use-browser-location.js",
      "limit": "1000 B",
      "import": "{ useBrowserLocation }",
      "ignore": [
        "react",
        "use-sync-external-store"
      ]
    },
    {
      "path": "packages/boom-router/esm/memory-location.js",
      "limit": "1000 B",
      "ignore": [
        "react",
        "use-sync-external-store"
      ]
    },
    {
      "path": "packages/boom-router/esm/use-hash-location.js",
      "limit": "1000 B",
      "ignore": [
        "react",
        "use-sync-external-store"
      ]
    }
  ],
  "husky": {
    "hooks": {
      "commit-msg": "npm run fix:p"
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "es2020": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    },
    "plugins": [
      "react-hooks"
    ],
    "ignorePatterns": [
      "types/**"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@size-limit/preset-small-lib": "^10.0.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/babel__core": "^7.20.2",
    "@types/react": "^18.2.0",
    "@types/react-test-renderer": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.3",
    "changelog": "^1.4.2",
    "concurrently": "^8.2.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jsdom": "^22.1.0",
    "path-to-regexp": "^6.2.1",
    "prettier": "^2.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^4.18.0",
    "size-limit": "^10.0.1",
    "typescript": "5.2.2",
    "vitest": "^0.34.6"
  }
}
